@model HiltonsQuoteCollection.Models.Quotes

<h2>Enter your Quote here</h2>

<form asp-action="AddQuote" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group col-md-3">
        <label asp-for="Quote">What is the Quote?</label>
        <input class="form-control" asp-for="Quote"/>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="Author">Who is the Author?</label>
        <input class="form-control" asp-for="Author"/>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="Date">What is the date you would like to enter?</label>
        <input class="form-control" asp-for="Date"/>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="Subject">If desired, whats the Subject? (optional)</label>
        <input class="form-control" asp-for="Subject"/>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="Citation">Do you have a Citation? (optional)</label>
        <input class="form-control" asp-for="Citation"/>
    </div>

    <button type="submit">Submit Quote!</button>
</form>